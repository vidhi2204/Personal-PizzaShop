@model DAL.ViewModels.ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change_Password";
    Layout = "_Layout";
}

<div class="mt-3 ms-3 fs-1 fw-bold text-primary">Change Password</div>

<form asp-action="ChangePassword" method="post" class="ms-5 mt-4">
    <p class="ms-4">Enter a new password to update your account credentials</p>
    <div class="form-group m-3 position-relative col-5">
        <input type="password" asp-for="CurrentPassword" class="inputText form-control" id="currentPassword"  placeholder="Current Password*"/>
                    @* <label for="currentPassword" asp-for="CurrentPassword">Password</label> *@
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    <span><i class="bi bi-eye-slash-fill password-icon-changepass" id="togglepassword"
                            onclick="toggle_fnction('togglepassword','currentPassword')"></i></span>
                    <span class="" id=""></span>
    </div>
        <div class="form-group m-3 position-relative col-5">
        <input type="password" asp-for="NewPassword" class="inputText form-control" id="newPassword"  placeholder="New Password*"/>
                    @* <label for="currentPassword" asp-for="CurrentPassword">Password</label> *@
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <span><i class="bi bi-eye-slash-fill password-icon-changepass" id="togglepassword"
                            onclick="toggle_fnction('togglepassword','newPassword')"></i></span>
                    <span class="" id=""></span>
    </div>
        <div class="form-group m-3 position-relative col-5">
        <input type="password" asp-for="ConfirmPassword" class="inputText form-control" id="confirmPassword"  placeholder="Confirm Current Password*"/>
                    @* <label for="currentPassword" asp-for="CurrentPassword">Password</label> *@
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <span><i class="bi bi-eye-slash-fill password-icon-changepass" id="togglepassword"
                            onclick="toggle_fnction('togglepassword','confirmPassword')"></i></span>
                    <span class="" id=""></span>
    </div>


    <span class="text-danger ms-3">@ViewBag.message</span> <br>
    <button type="submit" class="btn btn-primary ms-3 ">Submit</button>
    <button type="button" class="btn btn-outline-primary">Cancel</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';
            console.log("successMessage",successMessage);
             toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "timeOut": "2000"
            };
            if (successMessage) {
                toastr.success(successMessage);
            }
            if (errorMessage ) 
                {
                    toastr.error(errorMessage);
                }
            })
    </script>
}